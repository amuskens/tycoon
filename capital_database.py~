
class Item:
    def __init__(self,cost,rel,icon,lifespan,maintenance):
        self.cost = cost
        self.reliability_constant = rel
        self.icon = icon
        self.lifespan = lifespan
        self.maintenance_budget = maintenance
        self.operating = True
        

class Network(Item):
    def __init__(self,max_capacity,target_capacity,power):
        self.max_capacity = max_capacity
        self.target_capacity = target_capacity
        self.power_consumption = power

class Router(Network):
    def __init__(self,service_range):
        self.service_range = service_range

class PointToPoint(Network):
    def __init__(self):
        pass

class Radio(PointToPoint):
    def __init__(self,radio_type,trans_range):
        self.radio_type = radio_type
        self.transmission_range = trans_range

class Wired(PointToPoint):
    
